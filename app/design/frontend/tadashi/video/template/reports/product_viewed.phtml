?>
<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
<div class="product-collateral block-viewed">
    <div class="block-content">
        <h2><?php echo $this->__('Recently Viewed Product(s)') ?></h2>
        <ol id="recently-viewed-items">
        <?php foreach ($_products as $_item): ?>
            <li class="item">                
                <a class="product-image" href="<?php echo $this->getProductUrl($_item) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail') ?>" width="80" height="120" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a>
                <p class="product-name"><?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?></p>
                <span class="price"><?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getPriceHtml() , 'price') ?></span>
            </li>
        <?php endforeach; ?>
        </ol>
        <script type="text/javascript">decorateList('recently-viewed-items');</script>
    </div>
</div>
<?php endif; ?>

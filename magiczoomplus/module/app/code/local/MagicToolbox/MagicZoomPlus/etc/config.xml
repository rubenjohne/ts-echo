<?xml version="1.0"?>
<config>
    <modules>
        <MagicToolbox_MagicZoomPlus>
            <version>4.4.29</version>
        </MagicToolbox_MagicZoomPlus>
    </modules>
    <admin>
        <routers>
            <magiczoomplus>
                <use>admin</use>
                <args>
                    <module>MagicToolbox_MagicZoomPlus</module>
                    <frontName>magiczoomplus</frontName>
                </args>
            </magiczoomplus>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <magictoolbox translate="title" module="magiczoomplus">
                <title>Magic Toolbox</title>
                <sort_order>300</sort_order>
                <children>
                    <magiczoomplus translate="title" module="magiczoomplus">
                        <title>Magic Zoom Plus settings</title>
                        <sort_order>10</sort_order>
                        <action>magiczoomplus/adminhtml_settings/index</action>
                    </magiczoomplus>
                </children>
            </magictoolbox>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <magictoolbox>
                            <title>Magic Toolbox</title>
                            <sort_order>300</sort_order>
                            <children>
                                <magiczoomplus>
                                    <title>Magic Zoom Plus settings</title>
                                    <sort_order>10</sort_order>
                                </magiczoomplus>
                            </children>
                        </magictoolbox>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <magiczoomplus>
                    <file>magiczoomplus.xml</file>
                </magiczoomplus>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <magiczoomplus>
                    <file>magiczoomplus.xml</file>
                </magiczoomplus>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <magiczoomplus>
                <class>MagicToolbox_MagicZoomPlus_Model</class>
                <resourceModel>magiczoomplus_mysql4</resourceModel>
            </magiczoomplus>
            <magiczoomplus_mysql4>
                <class>MagicToolbox_MagicZoomPlus_Model_Mysql4</class>
                <entities>
                    <settings>
                        <table>magiczoomplus</table>
                    </settings>
                </entities>
            </magiczoomplus_mysql4>
        </models>
        <resources>
            <magiczoomplus_setup>
                <setup>
                    <module>MagicToolbox_MagicZoomPlus</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </magiczoomplus_setup>
            <magiczoomplus_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </magiczoomplus_write>
            <magiczoomplus_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </magiczoomplus_read>
        </resources>
        <blocks>
            <magiczoomplus>
                <class>MagicToolbox_MagicZoomPlus_Block</class>
            </magiczoomplus>

            <catalog>
                <rewrite>
                    <product_new>MagicToolbox_MagicZoomPlus_Block_Product_New</product_new>
                </rewrite>
                <rewrite>
                    <product_view_options_type_select>MagicToolbox_MagicZoomPlus_Block_Product_View_Options_Type_Select</product_view_options_type_select>
                </rewrite>
            </catalog>

            <!--<page>
                <rewrite>
                    <html_head>MagicToolbox_MagicZoomPlus_Block_Html_Head</html_head>
                </rewrite>
            </page>-->
        </blocks>
        <helpers>
            <magiczoomplus>
                <class>MagicToolbox_MagicZoomPlus_Helper</class>
            </magiczoomplus>
        </helpers>

    </global>
</config>
